{
  "name": "@mdjs/core",
  "version": "0.0.0",
  "publishConfig": {
    "access": "public"
  },
  "description": "Combine Markdown with JavaScript",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/open-wc/open-wc.git",
    "directory": "packages/mdjs"
  },
  "author": "open-wc",
  "homepage": "https://github.com/open-wc/open-wc/",
  "scripts": {
    "build": "rimraf dist && babel src --out-dir dist --copy-files --include-dotfiles",
    "build:watch": "onchange 'src/**/*.js' 'test/**/*.js' -- npm run build --silent",
    "prepublishOnly": "npm run build && ../../scripts/insert-header.js",
    "start": "npm run build && node ./dist/create.js",
    "test": "npm run test:node",
    "test:node": "mocha",
    "test:update-snapshots": "node -r @babel/register ./test/update-snapshots.js",
    "test:watch": "onchange 'src/**/*.js' 'test/**/*.js' -- npm run test --silent"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "open-wc"
  ],
  "dependencies": {
    "@babel/parser": "^7.7.0",
    "@babel/traverse": "^7.7.0",
    "@types/commonmark": "^0.27.4",
    "commonmark": "^0.29.1"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "mocha": "^6.2.2",
    "onchange": "^5.2.0",
    "rimraf": "^3.0.0"
  }
}
